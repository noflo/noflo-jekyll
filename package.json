{
  "name": "noflo-jekyll",
  "description": "Reimplementation of the Jekyll static site generator as a flow-based Node.js program",
  "version": "0.0.1",
  "keywords": [
    "noflo",
    "jekyll",
    "blog"
  ],
  "author": "Henri Bergius <henri.bergius@iki.fi>",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noflo/noflo-jekyll.git"
  },
  "dependencies": {
    "noflo": "^1.0.0",
    "noflo-core": "^0.5.0",
    "noflo-filesystem": "^2.0.0",
    "noflo-flow": "^0.6.0",
    "noflo-groups": "^0.3.0",
    "noflo-liquid": "^0.3.0",
    "noflo-markdown": "^0.4.0",
    "noflo-math": "^0.3.0",
    "noflo-objects": "^0.4.0",
    "noflo-packets": "^0.3.0",
    "noflo-routers": "^0.4.0",
    "noflo-strings": "^0.4.0",
    "noflo-yaml": "^0.4.0"
  },
  "devDependencies": {
    "chai": "^4.01",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mimetype": "^0.0.8",
    "mocha": "^4.0.0",
    "rimraf": "^2.5.4"
  },
  "bin": {
    "noflo-jekyll": "./bin/noflo-jekyll"
  },
  "main": "./index.js",
  "scripts": {
    "pretest": "eslint lib/*.js components/*.js index.js",
    "test": "mocha -R spec -t 2000 spec/*.js",
    "postinstall": "noflo-cache-preheat",
    "fixtures": "jekyll -s spec/fixtures/source -d spec/fixtures/jekyll"
  }
}
